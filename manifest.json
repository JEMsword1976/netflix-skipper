{
  "manifest_version": 3,
  "name": "Netflix Auto Skip & Play",
  "version": "1.0",
  "description": "Automatically plays the next episode and skips intros on Netflix.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://*.netflix.com/*",
    "https://netflix-skipper.vercel.app/"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
} 